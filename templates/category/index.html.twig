{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table category : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }}</h2>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir les séries de cette catégorie</a>
            <a href="{{ path("category_delete", {id: category.id}) }}">Supprimer la catégorie</a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}